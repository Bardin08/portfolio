@model Portfolio.Api.Models.Requests.ServicesRequest

<!DOCTYPE html>
<html>
<head>
    <style>
        body {
            font-family: -apple-system, BlinkMacSystemFont, sans-serif;
            line-height: 1.6;
            color: #1a1a1a;
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 600px;
            margin: 0 auto;
            padding: 40px 20px;
        }

        .header {
            text-align: center;
            margin-bottom: 40px;
        }

        .logo {
            font-size: 24px;
            font-weight: 700;
            color: #1a1a1a;
        }

        .content {
            background: #ffffff;
            padding: 40px;
            border-radius: 20px;
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1);
        }

        .request-details {
            background: #f8f9fa;
            padding: 20px;
            border-radius: 10px;
            margin: 20px 0;
        }

        .link {
            word-break: break-all;
            color: #007AFF;
        }

        .footer {
            margin-top: 40px;
            text-align: center;
            color: #666;
            font-size: 14px;
        }
    </style>
</head>
<body>
<div class="container">
    <div class="header">
        <div class="logo">New Service Request</div>
    </div>
    <div class="content">
        <h1>New Request Received</h1>
        <div class="request-details">
            <p>
                <strong>From:</strong> @Model.Name
            </p>
            <p>
                <strong>Email:</strong> @Model.Email
            </p>
            <p>
                <strong>Project Description:</strong><br>@Model.Description
            </p>

            @if (!string.IsNullOrEmpty(Model.Link))
            {
            <p>
                <strong>Reference Link:</strong>
                <br><a href="@Model.Link" class="link">@Model.Link</a>
            </p>
            }
        </div>
        <p>Remember to respond within 24-48 hours to maintain good response times.</p>
    </div>
    <div class="footer">
        Â© 2024 Vladyslav Bardin. All rights reserved.<br>
        Kyiv, Ukraine
    </div>
</div>
</body>
</html>